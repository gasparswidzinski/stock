QWidget {
    background-color: #f5f5f5;
    color: #222;
    font-family: Segoe UI, Arial, sans-serif;
    font-size: 10.5pt;
}

QPushButton {
    background-color: #e0e0e0;
    border: 1px solid #bbb;
    border-radius: 4px;
    padding: 5px;
}

QPushButton:hover {
    background-color: #d5d5d5;
}

QTableWidget {
    gridline-color: #ccc;
    selection-background-color: #aed6f1;
}
