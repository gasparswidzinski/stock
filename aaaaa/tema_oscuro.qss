QWidget {
    background-color: #2b2b2b;
    color: #eee;
    font-family: Segoe UI, Arial, sans-serif;
    font-size: 10.5pt;
}

QPushButton {
    background-color: #444;
    border: 1px solid #666;
    border-radius: 4px;
    padding: 5px;
}

QPushButton:hover {
    background-color: #555;
}

QTableWidget {
    gridline-color: #555;
    selection-background-color: #3b5b75;
}
